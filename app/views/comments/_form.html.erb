<%= render 'common/errors', model: @comment %>

<%= form_for [@article, @comment] do |f| %>

  <div class="form-group">
    <%= f.label :commenter %>
    <%= f.text_field :commenter, class: 'form-control' %>

  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
    <%= f.submit %>
  </div>

<% end %>
